<div id="add_task">
    <%= form_for :items, url: user_items_path(user_id: current_user.id), remote: true, method: :post do |f| %>
        <div>
            <%= f.text_field :name, placeholder: "Enter item name", size: 50 %>
            <%= f.submit 'Save', class: 'btn btn-primary' %>
            <%= link_to 'Back', users_show_path(current_user), class: 'btn btn-primary' %>
        </div>
    <% end %>
</div>