<div class="form">
    <h1>Add New To-Do Item</h1>
    <%= form_for :items, url: user_items_path(user_id: current_user.id), method: :post do |f| %>
        <div>
             <%= f.text_field :name, placeholder: "Enter item name", size: 50 %>
        </div>
        <div class="buttons">
            <%= f.submit 'Save', class: 'btn btn-primary', style: 'color: rgba(25,190, 255, .9 ); border: 2px solid rgba(204, 20, 56, 1 ); background-color: #FFF200; border-radius: 10px; font-weight: bold', remote: true %>
            <%= link_to 'Back', users_show_path(current_user), style: 'color: rgba(25,190, 255, .9 ); border: 2px solid rgba(204, 20, 56, 1 ); background-color: #FFF200; border-radius: 10px; font-weight: bold', class: 'btn btn-primary' %>
        </div>
    <% end %>
</div>